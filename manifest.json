{
  "manifest_version": 3,
  "name": "Tally-Mark",
  "description": "Chrome extension that tracks the count for any task",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon-128.png",
    "default_title": "tally-Mark"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "Alt+Shift+T"
      },
      "description": "Open the Tally-Mark popup"
    }
  }
}
